@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":FitBizParser" as FitBizParser LOGIC_COLOR
participant ":ScheduleCommandParser" as ScheduleCommandParser LOGIC_COLOR
participant "s:ScheduleCommand" as ScheduleCommand LOGIC_COLOR
participant "c:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute(commandText)
activate LogicManager

LogicManager -> FitBizParser : parseCommand(commandText)
activate FitBizParser

create ScheduleCommandParser
FitBizParser -> ScheduleCommandParser : ScheduleCommandParser()
activate ScheduleCommandParser

ScheduleCommandParser --> FitBizParser
deactivate ScheduleCommandParser

FitBizParser -> ScheduleCommandParser : parse(arguments)
activate ScheduleCommandParser

create ScheduleCommand
ScheduleCommandParser -> ScheduleCommand : ScheduleCommand(index, scheduleList)
activate ScheduleCommand

ScheduleCommand --> ScheduleCommandParser : s
deactivate ScheduleCommand

ScheduleCommandParser --> FitBizParser : s
deactivate ScheduleCommandParser

FitBizParser --> LogicManager : s
deactivate FitBizParser

LogicManager -> ScheduleCommand : execute(model)
activate ScheduleCommand

ScheduleCommand -> Model : getFilteredClientList()
activate Model

Model --> ScheduleCommand : filteredClientList
deactivate Model

ScheduleCommand -> Model : setClient(clientToEdit, editedClient)
activate Model

Model --> ScheduleCommand:
deactivate Model


create CommandResult
ScheduleCommand -> CommandResult : CommandResult(feedbackToUser)
activate CommandResult

CommandResult --> ScheduleCommand : c
deactivate CommandResult

ScheduleCommand --> LogicManager : c
deactivate ScheduleCommand

[<--LogicManager : c
deactivate LogicManager
@enduml
