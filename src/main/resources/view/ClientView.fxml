<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane prefHeight="143.0" prefWidth="400.0" HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="400.0" prefWidth="400.0" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" prefHeight="143.0" prefWidth="484.0" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
      </HBox>
      <FlowPane fx:id="tags" />
         <HBox prefHeight="52.0" prefWidth="380.0">
            <children>
               <VBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                  <Label fx:id="phone" styleClass="cell_small_label" text="\$phone">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Label>
                  <Label fx:id="birthday" styleClass="cell_small_label" text="\$birthday">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Label>
                  <Label fx:id="currentWeight" styleClass="cell_small_label" text="\$currentWeight">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Label>
                  </children>
                  <padding>
                     <Insets right="10.0" />
                  </padding>
               </VBox>
               <VBox prefHeight="100.0" prefWidth="194.0" HBox.hgrow="ALWAYS">
                  <children>
                  <Label fx:id="gender" styleClass="cell_small_label" text="\$gender">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Label>
                  <Label fx:id="height" styleClass="cell_small_label" text="\$height">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Label>
                  <Label fx:id="targetWeight" styleClass="cell_small_label" text="\$targetWeight">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Label>
                  </children>
                  <padding>
                     <Insets right="10.0" />
                  </padding>
               </VBox>
            </children>
         </HBox>
      <Label fx:id="email" styleClass="cell_small_label" text="\$email">
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </Label>
      <Label fx:id="address" styleClass="cell_small_label" text="\$address">
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </Label>
      <Label fx:id="remark" styleClass="cell_small_label" text="\$remark">
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </Label>
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
