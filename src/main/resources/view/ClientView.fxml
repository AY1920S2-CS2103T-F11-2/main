<?xml version="1.0" encoding="UTF-8" ?>

<?import javafx.geometry.Insets ?>
<?import javafx.scene.control.Label ?>
<?import javafx.scene.layout.ColumnConstraints ?>
<?import javafx.scene.layout.FlowPane ?>
<?import javafx.scene.layout.GridPane ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.layout.Region ?>
<?import javafx.scene.layout.VBox ?>

<HBox id="clientView" fx:id="cardPane"
  xmlns="http://javafx.com/javafx/8"
  xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="name" text="\$first" styleClass="view-name-label" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="phone" styleClass="view-attributes-label" text="\$phone" />
      <Label fx:id="address" styleClass="view-attributes-label" text="\$address" />
      <Label fx:id="email" styleClass="view-attributes-label" text="\$email" />
      <Label fx:id="gender" styleClass="view-attributes-label" text="\$gender" />
      <Label fx:id="birthday" styleClass="view-attributes-label" text="\$birthday" />
      <Label fx:id="height" styleClass="view-attributes-label" text="\$height" />
      <Label fx:id="currentWeight" styleClass="view-attributes-label" text="\$currentWeight" />
      <Label fx:id="targetWeight" styleClass="view-attributes-label" text="\$targetWeight" />
      <Label fx:id="remark" styleClass="view-attributes-label" text="\$remark" />
      <FlowPane fx:id="sports" />
    </VBox>
  </GridPane>
</HBox>
